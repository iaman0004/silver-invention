---
interface Props {
  id?: string;
  flexDirection?:
    | "row"
    | "column"
    | "row-reverse"
    | "column-reverse"
    | "inherit";
  justifyContent?:
    | "center"
    | "flex-end"
    | "flex-start"
    | "space-between"
    | "space-around"
    | "space-evenly"
    | "inherit";
  alignItems?: "center" | "baseline" | "flex-end" | "flex-start" | "inherit";
  styles?: { [key: string]: string };
}

const {
  id,
  flexDirection = "inherit",
  justifyContent = "inherit",
  alignItems = "inherit",
  styles = {},
} = Astro.props;
---

<div
  id={id}
  class='container'
  style={{ flexDirection, justifyContent, alignItems, ...styles }}
>
  <slot />
</div>

<style lang='scss'>
  .container {
    display: flex;
  }
</style>
