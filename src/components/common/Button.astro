---
interface Props {
  type: "submit" | "button";
  classNames?: string[] | undefined;
}

const { type, classNames } = Astro.props;
---

<button class:list={["button", ...(classNames ?? [])]} type={type}>
  <slot />
</button>

<style lang='scss'>
  .button {
    outline: none;
    border: none;
    height: 40px;
    padding: 0 20px;
    border-radius: 4px;
    cursor: pointer;
    color: var(--light-main);
    box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    font-family: var(--font-family-crimson);
    font-weight: 600;
    font-size: var(--text-lg);
    background-color: var(--accent-light);
    &:hover {
      background-color: var(--accent-dark);
    }
  }
</style>
