---
import Journey from "./Journey.astro";
import Flex from "@common-components/Flex.astro";
---

<div class="container">
  <Flex justifyContent="center">
    <h3 class="header">
      My&nbsp;<span class="highlight">Career Journey</span>
    </h3>
  </Flex>
  <h5 class="subheader">
    Professional journey and achievement in software Development
  </h5>
  <Journey />
</div>

<style lang="scss">
  @import "../styles/media.scss";
  .container {
    .header {
      font-size: var(--text-2xl);
      color: var(--light-main);
      font-family: var(--font-family-inria);
      margin: 32px 0 8px;
      @include medium_device {
        font-size: var(--text-xl);
      }
    }
    .subheader {
      font-size: var(--text-sm);
      text-align: center;
      color: var(--light-main);
      font-family: var(--font-family-inria-regular);
      margin-bottom: 32px;
    }
  }
</style>
